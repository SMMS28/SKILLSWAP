{
  "name": "skillswap-learning-network",
  "version": "1.0.0",
  "description": "Peer-to-peer skill exchange platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-client": "cd frontend && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "db:reset": "node database/migrations.js reset",
    "db:migrate": "node database/migrations.js migrate",
    "db:seed": "node database/migrations.js seed",
    "test": "jest --config config/jest.config.js --rootDir .",
    "test:watch": "jest --config config/jest.config.js --rootDir . --watch",
    "test:coverage": "jest --config config/jest.config.js --rootDir . --coverage",
    "test:unit": "jest --config config/jest.config.js --rootDir . --testPathPatterns=tests/backend/.*\\.test\\.js$",
    "test:integration": "jest --config config/jest.config.js --rootDir . --testPathPatterns=tests/integration/.*\\.test\\.js$",
    "test:frontend": "cd src/frontend && npm test -- --coverage --watchAll=false",
    "test:all": "npm run test:coverage && npm run test:frontend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "skill-sharing",
    "learning",
    "peer-to-peer",
    "education",
    "exchange"
  ],
  "author": "SkillSwap Team",
  "license": "MIT"
}
